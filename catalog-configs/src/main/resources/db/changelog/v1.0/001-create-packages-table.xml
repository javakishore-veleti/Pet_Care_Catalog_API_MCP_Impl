<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.20.xsd">

    <changeSet id="001-create-packages-table" author="jklabs">
        <createTable tableName="packages" schemaName="catalog">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true" primaryKeyName="pk_packages"/>
            </column>
            <column name="code" type="VARCHAR(50)">
                <constraints nullable="false" unique="true"/>
            </column>
            <column name="name" type="VARCHAR(200)">
                <constraints nullable="false"/>
            </column>
            <column name="description" type="TEXT"/>
            <column name="pet_type" type="VARCHAR(20)">
                <constraints nullable="false"/>
            </column>
            <column name="age_group" type="VARCHAR(20)">
                <constraints nullable="false"/>
            </column>
            <column name="care_level" type="VARCHAR(20)">
                <constraints nullable="false"/>
            </column>
            <column name="base_price" type="DECIMAL(10,2)"/>
            <column name="savings_percentage" type="DECIMAL(5,2)"/>
            <column name="includes_dental" type="BOOLEAN" defaultValueBoolean="false"/>
            <column name="includes_spay_neuter" type="BOOLEAN" defaultValueBoolean="false"/>
            <column name="is_active" type="BOOLEAN" defaultValueBoolean="true"/>
            <column name="created_at" type="TIMESTAMP" defaultValueComputed="CURRENT_TIMESTAMP"/>
            <column name="updated_at" type="TIMESTAMP" defaultValueComputed="CURRENT_TIMESTAMP"/>
        </createTable>

        <rollback>
            <dropTable tableName="packages" schemaName="catalog"/>
        </rollback>
    </changeSet>

</databaseChangeLog>